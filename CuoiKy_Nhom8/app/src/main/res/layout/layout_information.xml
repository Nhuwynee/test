<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E0FFDAE6">

    <!-- Book Haven Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="5"
        android:text="BT cuối kỳ"
        android:textColor="#FF71A1"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_team"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:text="Nhóm 8: "
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#5D0E2A"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/lhp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Lớp học phần: 124LTTD04"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#5D0E2A"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="1. Phạm Thị Thu Nguyệt\n    Mã sinh viên: 22115053122125\n2. Lưu Ngọc Yến Như\n     Mã sinh viên: 22115053122128\n3. Nguyễn Thị Hiếu\n     Mã sinh viên: 22115053122114"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#334083"
        android:layout_marginBottom="20dp"/>

    <!-- Cute Cat Image -->
    <ImageView
        android:id="@+id/cat_image"
        android:layout_width="400dp"
        android:layout_height="204dp"
        android:layout_gravity="center"
        android:src="@drawable/bg" />

</LinearLayout>
