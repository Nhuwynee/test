<!-- res/layout/fragment_featured.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />


    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFeatured"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        tools:srcCompat="@drawable/hong_luc_2" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Hồng lục - Nguyễn Hoàng Vy"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:textSize="25dp"
        android:textColor="#009688"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="180.000 VND"
        android:layout_margin="10dp"/>
</LinearLayout>
    <TextView
        android:id="@+id/textView3"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hồng Lục là một cuốn sách hay được nhiều đọc giả thích và tìm đọc trong suốt 10 năm qua kể từ ngày cuốn sách này được xuất bản." />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:text="Chọn màu" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="70dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle1">
            </ImageButton>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle2">
            </ImageButton>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle3">
            </ImageButton>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle4">
            </ImageButton>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp"
            android:src="@drawable/icon_heart"
            android:id="@+id/btn_favourite_book"
            android:layout_gravity="left"
            android:background="@drawable/btn_favourite"

            />

    </LinearLayout>

</LinearLayout>

